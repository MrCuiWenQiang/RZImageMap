<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:background="@color/white"
    android:layout_gravity="end"
    android:orientation="vertical">

    <LinearLayout
        style="@style/right_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/right_ll_marker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/d"
                style="@style/item_image" />

            <TextView
                style="@style/item_image_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="画点" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_ll_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/x"
                style="@style/item_image" />

            <TextView
                style="@style/item_image_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="画线" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/right_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/right_ll_mian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/area"
                style="@style/item_image" />

            <TextView
                style="@style/item_image_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="画面" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_ll_rou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/y"
                style="@style/item_image"/>

            <TextView
                style="@style/item_image_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="画圆" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/right_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/right_ll_tuya"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/ty"
                style="@style/item_image" />

            <TextView
                style="@style/item_image_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="涂鸦" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_ll_clean"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/clone"
                style="@style/item_image"/>

            <TextView
                style="@style/item_image_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/right_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/right_ll_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/dc"
                style="@style/item_image"/>

            <TextView
                style="@style/item_image_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导出" />
        </LinearLayout>

        <LinearLayout
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/item_image_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>